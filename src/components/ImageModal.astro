<div id="imageModal" class="fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center hidden">
    <div class="bg-white p-4 rounded-lg max-w-3xl w-full mx-4">
      <img id="modalImage" src="/placeholder.svg" alt="" class="w-full h-auto rounded-lg">
      <button id="closeImageModal" class="mt-4 bg-celeste-500 text-white py-2 px-4 rounded hover:bg-celeste-600 transition duration-300">
        Cerrar
      </button>
    </div>
</div>
  
<script>
    const imageModal = document.getElementById('imageModal');
    const modalImage = document.getElementById('modalImage');
    const closeImageModal = document.getElementById('closeImageModal');
    const galleryImages = document.querySelectorAll('.gallery-image');
  
    galleryImages.forEach(img => {
      img.addEventListener('click', () => {
        modalImage.src = img.src;
        modalImage.alt = img.alt;
        imageModal.classList.remove('hidden');
      });
    });
  
    closeImageModal.addEventListener('click', () => {
      imageModal.classList.add('hidden');
    });
  
    imageModal.addEventListener('click', (e) => {
      if (e.target === imageModal) {
        imageModal.classList.add('hidden');
      }
    });
  
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && !imageModal.classList.contains('hidden')) {
        imageModal.classList.add('hidden');
      }
    });
</script>
  
  