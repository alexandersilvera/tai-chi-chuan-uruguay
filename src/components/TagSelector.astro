---
import { getAllTags } from "@/utils/getAllTags";
const tags = await getAllTags();
---

<div class="mb-8">
    <h2 class="text-lg font-semibold text-white mb-4">Filtrar por categor√≠as:</h2>
    <div class="flex flex-wrap gap-2">
        <a
            href="/blog"
            class="px-3 py-1 text-sm rounded-full bg-zinc-800 hover:bg-zinc-700 text-zinc-300 hover:text-white transition-colors"
        >
            Todos
        </a>
        {tags.map(([tag, count]) => (
            <a
                href={`/blog/tag/${tag.toLowerCase()}`}
                class="px-3 py-1 text-sm rounded-full bg-zinc-800 hover:bg-zinc-700 text-zinc-300 hover:text-white transition-colors"
            >
                {tag} ({count})
            </a>
        ))}
    </div>
</div>