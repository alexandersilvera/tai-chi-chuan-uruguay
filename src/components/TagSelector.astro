---
import { getAllTags } from "@/utils/getAllTags";
const tags = await getAllTags();
---

<div class="mb-8">
  <div class="flex items-center gap-3 mb-3">
    <div class="w-10 h-10 rounded-full grid place-items-center bg-zinc-800 text-zinc-400">
      <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M4 7V4a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2v3"></path>
        <path d="M4 17v3a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-3"></path>
        <line x1="12" y1="2" x2="12" y2="22"></line>
      </svg>
    </div>
    <h2 class="text-lg text-white font-medium">Filtrar por etiqueta</h2>
  </div>
  
  <div class="flex flex-wrap gap-2 ml-2">
    <a href="/blog" class="text-xs px-3 py-1.5 bg-emerald-500/20 text-emerald-400 rounded-full hover:bg-emerald-500/30 transition-colors">
      Todos
    </a>
    {
      tags.map((tag) => (
        <a href={`/blog/tag/${tag.toLowerCase()}`} class="text-xs px-3 py-1.5 bg-zinc-800 text-zinc-400 rounded-full hover:bg-zinc-700 hover:text-zinc-200 transition-colors">
          {tag}
        </a>
      ))
    }
  </div>    
</div>
