---
const images = [
  { src: "/familia_sun_lu_tang.jpg?height=400&width=600", alt: "Familia Sun Lu Tang" },
  { src: "/familia_tai_chi.jpeg?height=400&width=600", alt: "Familia Sun" },
  { src: "/sifu_con_maestro_1.jpeg?height=400&width=600", alt: "Sifu Jorge con Maestro" },
  { src: "/sifu_practica_1.jpeg?height=400&width=600", alt: "Sifu Jorge practicando en Monasterio" },
];
---

<div class="relative w-full" x-data="{ activeSlide: 0 }">
    <div class="relative h-64 overflow-hidden rounded-lg md:h-80">
      {images.map((image, index) => (
        <div
          x-show={`activeSlide === ${index}`}
          x-transition:enter="transition ease-out duration-300"
          x-transition:enter-start="opacity-0 transform scale-90"
          x-transition:enter-end="opacity-100 transform scale-100"
          x-transition:leave="transition ease-in duration-300"
          x-transition:leave-start="opacity-100 transform scale-100"
          x-transition:leave-end="opacity-0 transform scale-90"
          class="absolute inset-0"
        >
          <img src={image.src} alt={image.alt} class="w-full h-full object-cover" />
        </div>
      ))}
    </div>
    
    <div class="absolute z-30 flex space-x-3 -translate-x-1/2 bottom-5 left-1/2">
      {images.map((_, index) => (
        <button
          type="button"
          class="w-3 h-3 rounded-full"
          aria-current={index === 0 ? "true" : "false"}
          aria-label={`Slide ${index + 1}`}
          @click={`activeSlide = ${index}`}
          :class={`activeSlide === ${index} ? 'bg-white' : 'bg-white/50'`}
        ></button>
      ))}
    </div>
    
    <button 
      type="button" 
      class="absolute top-0 left-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none" 
      @click="activeSlide = activeSlide === 0 ? ${images.length - 1} : activeSlide - 1"
    >
      <span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-white/30 dark:bg-gray-800/30 group-hover:bg-white/50 dark:group-hover:bg-gray-800/60 group-focus:ring-4 group-focus:ring-white dark:group-focus:ring-gray-800/70 group-focus:outline-none">
        <svg class="w-4 h-4 text-white dark:text-gray-800" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 1 1 5l4 4"/>
        </svg>
        <span class="sr-only">Previous</span>
      </span>
    </button>
    <button 
      type="button" 
      class="absolute top-0 right-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none" 
      @click="activeSlide = activeSlide === ${images.length - 1} ? 0 : activeSlide + 1"
    >
      <span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-white/30 dark:bg-gray-800/30 group-hover:bg-white/50 dark:group-hover:bg-gray-800/60 group-focus:ring-4 group-focus:ring-white dark:group-focus:ring-gray-800/70 group-focus:outline-none">
        <svg class="w-4 h-4 text-white dark:text-gray-800" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
        </svg>
        <span class="sr-only">Next</span>
      </span>
    </button>
</div>
