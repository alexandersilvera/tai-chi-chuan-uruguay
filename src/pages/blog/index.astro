---
import ArticleList from "@/layouts/ArticleList.astro";

import Article from "@/components/Article.astro";
import { getSortedPosts, getPagination } from "@/utils/getPosts";

const allPosts = await getSortedPosts();
const { posts, totalPages } = getPagination(allPosts, 1);

// LOG para depuraci√≥n:

---

<ArticleList currentPage={1} totalPages={totalPages}>
  {posts.map((post) => {

    return (
      <Article 
        {...post.data} 
        slug={post.slug} 
        initialLikes={post.data.initialLikes || 0} 
      />
    );
  })}
</ArticleList>